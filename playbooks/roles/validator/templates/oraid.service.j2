[Unit]
Description=Oraichain Node
After=network.target
After=systemd-user-sessions.service
After=network-online.target

[Service]
User=orai
Group=orai
Type=simple
ExecStart=/home/orai/go/bin/oraid start 
#Environment="LD_LIBRARY_PATH=/home/orai"
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target

